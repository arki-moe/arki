{
  "name": "arki",
  "version": "0.0.5",
  "description": "AI Agent Programming Assistant",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arki": "bin/arki.js"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--import ./register-md.mjs' tsx src/index.ts",
    "dev:watch": "NODE_OPTIONS='--import ./register-md.mjs' tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --testNamePattern='E2E'",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "ai",
    "agent",
    "cli",
    "coding",
    "assistant"
  ],
  "author": "arki.moe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arki-moe/arki.git"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
